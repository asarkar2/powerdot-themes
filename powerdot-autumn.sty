\pddefinetemplate{basic}{
    titlefont=\bfseries\Large\color{fontcolor2}\raggedright,
    clockpos={0.99\slidewidth,\slideheight},
    clockcolor=fontcolor1,
    lfpos={.03\slidewidth,.02\slideheight},
    lffont=\scriptsize\color{fontcolor1},
%     cfpos={.5\slidewidth,.02\slideheight},
%     cffont=\scriptsize\color{fontcolor1},
    rfpos={.97\slidewidth,.02\slideheight},
    rffont=\scriptsize\color{fontcolor1},
    textfont=\color{fontcolor1},
  ifsetup=landscape,
    titlepos={.2\slidewidth,.93\slideheight},
    titlewidth=.78\slidewidth,
    textpos={.2\slidewidth,.83\slideheight},
    textwidth=.75\slidewidth,
    textheight=.76\slideheight,
  ifsetup=portrait,
    titlepos={.1\slidewidth,.93\slideheight},
    titlewidth=.9\slidewidth,
    textheight=.69\slideheight,
    textpos={.09\slidewidth,.83\slideheight},
    textwidth=.85\slidewidth,
    lfpos={.06\slidewidth,.045\slideheight},
    rfpos={.94\slidewidth,.045\slideheight}   
}{%  
  \psframe[linestyle=none,linewidth=0pt,fillstyle=gradient,%
    gradbegin=darkgreen,gradend=darkolivegreen,%
    gradmidpoint=1](0,\slideheight)(\slidewidth,0)
%   \psline[linecolor=darkgoldenrod,linewidth=3pt]%
%     (0.1\slidewidth,0.865\slideheight)(\slidewidth,0.865\slideheight)
%   \psline[linecolor=darkgoldenrod,linewidth=1pt]
%     (0.1\slidewidth,0.855\slideheight)(\slidewidth,0.855\slideheight)
  \pdifsetup{landscape}{
  \psframe[fillstyle=gradient,gradbegin=darkolivegreen,%
    gradend=darkgoldenrod,gradmidpoint=1,linestyle=none]%
    (0,\slideheight)(0.175\slidewidth,0)
%     \psline[linecolor=darkgoldenrod,linewidth=3pt]%
%       (0.1\slidewidth,0.88\slideheight)(\slidewidth,0.88\slideheight)
%     \psline[linecolor=darkgoldenrod,linewidth=1pt]
%       (0.1\slidewidth,0.87\slideheight)(\slidewidth,0.87\slideheight)
    \psline[linecolor=darkgoldenrod,linewidth=3pt]%
      (0.1\slidewidth,0.865\slideheight)(\slidewidth,0.865\slideheight)
    \psline[linecolor=darkgoldenrod,linewidth=1pt]
      (0.1\slidewidth,0.855\slideheight)(\slidewidth,0.855\slideheight)
  }{
    \psline[linecolor=darkgoldenrod,linewidth=3pt]%
      (0.1\slidewidth,0.88\slideheight)(\slidewidth,0.88\slideheight)
    \psline[linecolor=darkgoldenrod,linewidth=1pt]
      (0.1\slidewidth,0.87\slideheight)(\slidewidth,0.87\slideheight)
  }
}

